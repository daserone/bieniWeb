{
  "compilerOptions": {
    "target": "es2017",
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "skipLibCheck": true,
    "module": "ESNext",

    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@views/*": ["./src/views/*"],
      "@utils/*": ["./src/utils/*"],
      "@theming/*": ["./src/theming/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["vite.config.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
